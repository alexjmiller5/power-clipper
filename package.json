{
  "name": "power-clipper",
  "displayName": "Power Clipper",
  "description": "Copy file contents and directory structures optimized for LLM Context",
  "publisher": "iyulab",
  "repository": {
    "type": "git",
    "url": "https://github.com/iyulab/vs-tools"
  },
  "icon": "logo_128.png",
  "version": "1.3.0",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "development",
    "code",
    "copy",
    "clipboard",
    "llm",
    "gpt",
    "context",
    "tree"
  ],
  "activationEvents": [
    "onCommand:power-clipper.copyFilesContent",
    "onCommand:power-clipper.copyFolderStructure"
  ],
  "configuration": {
    "title": "Power Clipper",
    "properties": {
      "powerClipper.alwaysExclude": {
        "type": "array",
        "default": [],
        "description": "Array of folder/file names to always exclude (e.g. ['backup', 'secrets'])"
      },
      "powerClipper.formatTemplate": {
        "type": "string",
        "default": "### `{{path}}`\n\n```{{language}}\n{{content}}\n```\n\n",
        "description": "Template for file output. Available variables: {{path}}, {{absolutePath}}, {{language}}, {{content}}"
      }
    }
  },
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "power-clipper.copyFilesContent",
          "group": "6_copypath@1",
          "when": "filesExplorerFocus"
        },
        {
          "command": "power-clipper.copyFolderStructure",
          "group": "6_copypath@2",
          "when": "filesExplorerFocus"
        }
      ]
    },
    "commands": [
      {
        "command": "power-clipper.copyFilesContent",
        "title": "Power Clipper: Copy Content & Path",
        "category": "Power Clipper"
      },
      {
        "command": "power-clipper.copyFolderStructure",
        "title": "Power Clipper: Copy Tree Structure Only",
        "category": "Power Clipper"
      }
    ],
    "keybindings": [
      {
        "command": "power-clipper.copyFilesContent",
        "key": "ctrl+alt+c",
        "mac": "cmd+opt+c",
        "when": "filesExplorerFocus"
      },
      {
        "command": "power-clipper.copyFolderStructure",
        "key": "ctrl+alt+t",
        "mac": "cmd+opt+t",
        "when": "filesExplorerFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mime-types": "^2.1.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "clipboardy": "^2.3.0",
    "ignore": "^5.3.0",
    "mime-types": "^2.1.35"
  }
}
