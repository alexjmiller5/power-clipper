{
  "name": "power-clipper",
  "displayName": "Power Clipper",
  "description": "Customizable copier of file contents and folder structures to clipboard, optimized for LLM contexts.",
  "publisher": "alexjmiller5",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexjmiller5/power-clipper"
  },
  "icon": "logo.png",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "development",
    "code",
    "copy",
    "clipboard",
    "llm",
    "gpt",
    "context"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Power Clipper",
      "properties": {
        "powerClipper.fileTemplate": {
          "type": "string",
          "default": "### `{{relativePath}}`\n\n```{{language}}\n{{content}}\n```\n\n",
          "description": "Template for file contents."
        },
        "powerClipper.treeTemplate": {
          "type": "string",
          "default": "## File Structure\n```\n{{tree}}\n```\n\n",
          "description": "Template for tree output."
        },
        "powerClipper.alwaysExclude": {
          "type": "array",
          "default": [],
          "description": "Array of glob patterns to always exclude (e.g. **/node_modules)",
          "scope": "resource"
        },
        "powerClipper.alwaysInclude": {
          "type": "array",
          "default": [],
          "description": "Array of glob patterns to always include",
          "scope": "resource"
        },
        "powerClipper.useGitIgnore": {
          "type": "boolean",
          "default": true,
          "description": "If true, respects the .gitignore file.",
          "scope": "resource"
        },
        "powerClipper.structureFormat": {
          "type": "string",
          "enum": [
            "repo",
            "relative",
            "absolute"
          ],
          "default": "repo",
          "description": "Root of the generated tree/paths.",
          "scope": "resource"
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "command": "power-clipper.copyFilesContentOnly",
          "group": "6_copypath@1",
          "when": "filesExplorerFocus"
        },
        {
          "command": "power-clipper.copyFilesFull",
          "group": "6_copypath@2",
          "when": "filesExplorerFocus"
        },
        {
          "command": "power-clipper.copyFolderStructure",
          "group": "6_copypath@3",
          "when": "filesExplorerFocus"
        },
        {
          "command": "power-clipper.excludeGlobally",
          "group": "7_modification@1",
          "when": "filesExplorerFocus"
        },
        {
          "command": "power-clipper.excludeFromProject",
          "group": "7_modification@2",
          "when": "filesExplorerFocus"
        }
      ]
    },
    "commands": [
      {
        "command": "power-clipper.debugConfig",
        "title": "Power Clipper: Debug Configuration",
        "category": "Power Clipper"
      },
      {
        "command": "power-clipper.copyFilesContentOnly",
        "title": "Power Clipper: Copy Content Only (Default)",
        "category": "Power Clipper"
      },
      {
        "command": "power-clipper.copyFilesFull",
        "title": "Power Clipper: Copy Content & Tree",
        "category": "Power Clipper"
      },
      {
        "command": "power-clipper.copyFolderStructure",
        "title": "Power Clipper: Copy Tree Only",
        "category": "Power Clipper"
      },
      {
        "command": "power-clipper.excludeGlobally",
        "title": "Exclude from Power Clipper (Global)",
        "category": "Power Clipper"
      },
      {
        "command": "power-clipper.excludeFromProject",
        "title": "Exclude from Power Clipper (Project)",
        "category": "Power Clipper"
      }
    ],
    "keybindings": [
      {
        "command": "power-clipper.copyFilesContentOnly",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "filesExplorerFocus"
      },
      {
        "command": "power-clipper.copyFilesFull",
        "key": "ctrl+shift+alt+c",
        "mac": "cmd+shift+opt+c",
        "when": "filesExplorerFocus"
      },
      {
        "command": "power-clipper.copyFolderStructure",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "filesExplorerFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mime-types": "^2.1.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "clipboardy": "^2.3.0",
    "ignore": "^7.0.5",
    "mime-types": "^3.0.2"
  }
}