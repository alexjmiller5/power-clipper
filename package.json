{
  "name": "power-clipper",
  "displayName": "Power Clipper",
  "description": "Customizable copier of file contents and folder structures to clipboard, optimized for LLM contexts.",
  "publisher": "alexjmiller5",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexjmiller5/power-clipper"
  },
  "icon": "",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "development",
    "code",
    "copy",
    "clipboard",
    "llm",
    "gpt",
    "context",
    "tree"
  ],
  "configuration": {
    "title": "Power Clipper",
    "properties": {
      "powerClipper.fileTemplate": {
        "type": "string",
        "default": "### `{{relativePath}}`\n\n```{{language}}\n{{content}}\n```\n\n",
        "description": "Template for file contents. Vars: {{fileName}}, {{repoPath}}, {{relativePath}}, {{absolutePath}}, {{content}}"
      },
      "powerClipper.treeTemplate": {
        "type": "string",
        "default": "## File Structure\n```\n{{tree}}\n```\n\n",
        "description": "Template for tree output. Available variable: {{tree}}"
      },
      "powerClipper.alwaysExclude": {
        "type": "array",
        "default": [],
        "description": "Array of folder/file names to always exclude"
      },
      "powerClipper.alwaysInclude": {
        "type": "array",
        "default": [],
        "description": "Array of folder/file names to always include"
      },
      "powerClipper.useGitIgnore": {
        "type": "boolean",
        "default": true,
        "description": "If true, respects the .gitignore file in the workspace root."
      }
    },
    "powerClipper.structureFormat": {
      "type": "string",
      "enum": [
        "repo",
        "relative",
        "absolute"
      ],
      "default": "repo",
      "description": "Determines the root of the generated tree. 'repo' (starts at git root), 'relative' (starts at selection), 'absolute' (full system path)."
    }
  },
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "power-clipper.copyFilesContent",
          "group": "6_copypath@1",
          "when": "filesExplorerFocus"
        },
        {
          "command": "power-clipper.copyFolderStructure",
          "group": "6_copypath@2",
          "when": "filesExplorerFocus"
        }
      ]
    },
    "commands": [
      {
        "command": "power-clipper.copyFilesContent",
        "title": "Power Clipper: Copy Content & Path",
        "category": "Power Clipper"
      },
      {
        "command": "power-clipper.copyFolderStructure",
        "title": "Power Clipper: Copy Tree Structure Only",
        "category": "Power Clipper"
      }
    ],
    "keybindings": [
      {
        "command": "power-clipper.copyFilesContent",
        "key": "ctrl+shift+c",
        "mac": "cmd+shiftt+c",
        "when": "filesExplorerFocus"
      },
      {
        "command": "power-clipper.copyFolderStructure",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "filesExplorerFocus"
      }
    ]
  },
  "devDependencies": {
    "@types/mime-types": "^2.1.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "clipboardy": "^2.3.0",
    "ignore": "^7.0.5",
    "mime-types": "^3.0.2"
  }
}
